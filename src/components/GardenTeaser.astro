---
import { Sprout } from "lucide-astro";
import PlantDecor from "./PlantDecor.astro";
---

<section class="py-16 bg-sage text-cream relative overflow-hidden">
  <div class="organic-blob" style="background: var(--terracotta); width: 300px; height: 300px; top: -20%; right: -10%;"></div>

  <!-- Fern pattern as subtle texture -->
  <div class="absolute top-[-30%] left-[-5%] opacity-[0.15] pointer-events-none">
    <PlantDecor size={600} variant="fern" class="text-[var(--cream)]" />
  </div>

  <div class="mx-auto max-w-4xl px-6 relative z-10">
    <div class="flex flex-col md:flex-row items-center gap-5 md:gap-6">
      <div class="flex-shrink-0">
        <div class="bg-cream/10 p-5 rounded-full backdrop-blur-sm border-2 border-cream/20">
          <Sprout size={44} class="text-cream" />
        </div>
      </div>

      <div>
        <h3 class="font-display text-2xl md:text-3xl font-bold mb-1">
          Garden Mode
        </h3>
        <p class="text-cream/90 text-lg leading-relaxed">
          Watch your tasks transform into seeds that sprout and bloom as you complete them. A playful way to visualize your growing garden of ideas.
        </p>
      </div>
    </div>
  </div>
</section>
