---
import { Download, Code } from "lucide-astro";
import BranchDecor from "./BranchDecor.astro";
---

<section class="relative overflow-visible py-12 md:py-16 lg:py-24">
  <div class="organic-blob" style="background: var(--color-primary); width: 500px; height: 500px; top: -10%; right: 10%;"></div>
  <div class="organic-blob" style="background: var(--color-accent); width: 400px; height: 400px; bottom: -5%; left: 5%; animation-delay: -5s;"></div>

  <!-- Botanical decorations — fern stems with cuts -->
  <div class="absolute top-[4%] left-[-1%] opacity-40 pointer-events-none" style="transform: rotate(-20deg);">
    <BranchDecor size={160} variant={4} class="text-[var(--color-highlight)]" />
  </div>
  <div class="absolute top-[18%] left-[1%] opacity-30 pointer-events-none" style="transform: rotate(15deg) scaleX(-1);">
    <BranchDecor size={130} variant={1} class="text-[var(--color-primary)]" />
  </div>

  <div class="relative mx-auto max-w-6xl px-6">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 md:gap-10 items-center">
      <div class="lg:col-span-7">
        <div class="fade-in" style="animation-delay: 0.1s;">
          <div class="inline-block mb-3 px-4 py-1.5 text-sm font-display font-semibold tracking-wide" style="transform: rotate(-1deg); background-color: var(--color-accent); color: var(--color-surface);">
            BETA
          </div>
        </div>

        <h1 class="font-serif text-6xl md:text-7xl lg:text-8xl leading-[0.95] text-brown fade-in" style="animation-delay: 0.2s;">
          For wandering<br/>
          <span class="italic text-sage">minds</span> and<br/>
          growing <span class="text-terracotta">ideas</span>
        </h1>

        <p class="mt-6 text-xl md:text-2xl text-muted max-w-xl leading-relaxed fade-in" style="animation-delay: 0.3s;">
          Ideas are seeds — stop holding them, start planting them in your digital garden.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row items-center gap-4 fade-in" style="animation-delay: 0.4s;">
          <a href="#download" class="btn-primary flex items-center gap-3">
            <Download size={22} />
            <span>Download for Mac</span>
          </a>
          <a
            href="https://github.com/holophyte/holophyte"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary flex items-center gap-3"
          >
            <Code size={22} />
            <span>View Source</span>
          </a>
        </div>
      </div>

      <div class="lg:col-span-5 fade-in" style="animation-delay: 0.5s;">
        <div class="relative">
          <div class="bg-cream-dark p-8 border-4" style="border-color: var(--color-dark); transform: rotate(1deg);">
            <div class="font-display text-brown text-sm font-semibold mb-4 tracking-wide">HOLOPHYTE</div>
            <div class="space-y-3">
              <div class="h-2 w-3/4" style="background: var(--color-primary);"></div>
              <div class="h-2 w-full" style="background: oklch(from var(--color-dark) calc(l + 0.15) c h);"></div>
              <div class="h-2 w-1/2" style="background: var(--color-accent);"></div>
              <div class="mt-6 pt-4" style="border-top: 2px solid oklch(from var(--color-dark) l c h / 0.2);">
                <div class="h-2 w-2/3 mb-3" style="background: var(--color-primary);"></div>
                <div class="h-2 w-5/6" style="background: oklch(from var(--color-dark) calc(l + 0.15) c h);"></div>
              </div>
            </div>
          </div>
          <div class="absolute -bottom-4 -right-4 w-full h-full border-4 -z-10" style="border-color: var(--color-accent);"></div>
        </div>
      </div>
    </div>
  </div>
</section>
