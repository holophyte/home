---
import BranchDecor from "./BranchDecor.astro";
import PlantDecor from "./PlantDecor.astro";

const features = [
  {
    number: "01",
    title: "Capture instantly",
    description: "Global hotkey to catch fleeting thoughts before they escape",
  },
  {
    number: "02",
    title: "AI cultivation",
    description: "Turn vague thoughts into actionable tasks with intelligent assistance",
  },
  {
    number: "03",
    title: "Unstick yourself",
    description: "Brainstorm approaches when you hit a creative block",
  },
  {
    number: "04",
    title: "Direct execution",
    description: "Run Claude Code directly from your tasks without context switching",
  },
  {
    number: "05",
    title: "Remember everything",
    description: "AI-generated summaries of your progress and accomplishments",
  },
  {
    number: "06",
    title: "Never lose your place",
    description: "Pick up exactly where you left off, every single time",
  },
];
---

<section class="py-12 md:py-16 relative overflow-hidden">
  <!-- Large faded bush silhouette in background -->
  <div class="absolute top-[5%] right-[-5%] opacity-[0.12] pointer-events-none" style="transform: rotate(10deg);">
    <PlantDecor size={700} variant="bush" class="text-[var(--color-primary)]" />
  </div>
  <!-- Branch accent -->
  <div class="absolute bottom-[12%] left-[-2%] opacity-25 pointer-events-none" style="transform: rotate(-15deg) scaleX(-1);">
    <BranchDecor size={150} variant={1} class="text-[var(--color-accent)]" />
  </div>

  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-14 fade-in">
      <h2 class="font-serif text-5xl md:text-6xl lg:text-7xl text-brown leading-tight">
        A garden for your<br/>
        <span class="italic text-sage">growing</span> ideas
      </h2>
      <div class="mt-3 h-1 w-32" style="background-color: var(--color-accent);"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {
        features.map((feature, index) => (
          <div class="card sprout-animation" style={`animation-delay: ${0.1 * index}s;`}>
            <div class="font-display text-terracotta text-sm font-bold mb-2 tracking-wider">
              {feature.number}
            </div>
            <h3 class="font-display text-2xl text-brown font-semibold mb-3">
              {feature.title}
            </h3>
            <p class="text-muted leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
