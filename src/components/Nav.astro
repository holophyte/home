---
import { Github, Twitter } from "lucide-astro";
import SproutIcon from "./SproutIcon.astro";
---

<nav class="sticky top-0 z-50 border-b border-custom bg-surface/80 backdrop-blur-md">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-2">
      <SproutIcon size={28} />
      <span class="font-logo text-xl text-emerald">Holophyte</span>
    </a>

    <div class="flex items-center gap-4">
      <a
        href="https://github.com/nicholasgriffintn/holophyte"
        target="_blank"
        rel="noopener noreferrer"
        class="text-muted transition-colors hover:text-emerald"
        aria-label="GitHub"
      >
        <Github size={22} />
      </a>
      <a
        href="https://twitter.com/holophyte"
        target="_blank"
        rel="noopener noreferrer"
        class="text-muted transition-colors hover:text-emerald"
        aria-label="Twitter"
      >
        <Twitter size={22} />
      </a>
    </div>
  </div>
</nav>
