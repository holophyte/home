---
import { Github } from "lucide-astro";
import SproutIcon from "./SproutIcon.astro";
---

<nav class="sticky top-0 z-50 border-b-2 border-brown bg-cream/90 backdrop-blur-sm">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-5">
    <a href="/" class="flex items-center gap-3 group">
      <div class="transition-transform group-hover:rotate-12">
        <SproutIcon size={32} />
      </div>
      <span class="font-display text-2xl text-brown font-bold tracking-tight">Holophyte</span>
    </a>

    <div class="flex items-center gap-6">
      <a
        href="https://github.com/holophyte/holophyte"
        target="_blank"
        rel="noopener noreferrer"
        class="text-brown-light transition-all hover:text-sage hover:scale-110"
        aria-label="GitHub"
      >
        <Github size={24} />
      </a>
    </div>
  </div>
</nav>
